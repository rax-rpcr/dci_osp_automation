resource_registry:
  OS::TripleO::Services::Rhsm: /usr/share/openstack-tripleo-heat-templates/deployment/rhsm/rhsm-baremetal-ansible.yaml

parameter_defaults:
  RhsmVars:
    rhsm_repos: 
{% for repo in required_overcloud_repos %}
      - {{ repo }}
{% endfor %}
    rhsm_username: '{{ rhsm_user }}'
    rhsm_password: '{{ rhsm_pass }}'
    rhsm_pool_ids:
{% for pool in rhsm_pool %}
      - {{ pool }}
{% endfor %}
    rhsm_method: "portal"
